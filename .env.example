# News Aggregator Configuration
# Copy this file to .env and fill in your values

# Required: Anthropic API Key for Claude
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Optional: OpenAI API Key (for future multi-LLM support)
# OPENAI_API_KEY=sk-your-openai-key-here

# LLM Settings
DEFAULT_LLM_MODEL=claude-3-haiku-20240307
# Options: claude-3-haiku-20240307 (cheap), claude-3-5-sonnet-20241022 (better quality)
MAX_TOKENS=4096

# Directory Settings
DATA_DIR=data
OUTPUT_DIR=outputs
LOG_DIR=logs

# Fetcher Settings
MAX_ARTICLES_PER_SOURCE=10
